{
  "$schema": "http://json-schema.org/2019-09/schema#",
  "$id": "http://preevent-covid.charite.de/picostatement.schema.json",
  "title": "Recommendation",
  "description": "A Recommendation from any MagicApp guideline",
  "version": "1-0-0",
  "type": "object",
  "properties": {
    "recommended": {
      "description": "conten of recommendation",
      "type": "string"
    },
    "recommendationId": {
      "$ref": "#/definitions/terminologyIdentifier"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "population": {
            "description": "Properties of the population for the recommended intervention",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "name of main population",
                  "type": "string"
                },
                "id": {
                  "$ref": "#/definitions/terminologyIdentifier"
                },
              "inclusion": {
              "description": "include if true, exlcude if false",
              "type": "boolean"
              }
              },
              "required": [
                "name",
                "id",
                "inclusion"
              ],
              "additionalProperties": false
            }
          },
          "intervention": {
            "description": "Properties of the recommended intervention",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "name of main intervention",
                  "type": "string"
                },
                "id": {
                  "$ref": "#/definitions/terminologyIdentifier"
                },
                "strength": {
                  "description": "strength of recommendation",
                  "type": "string"
                }, 
                "value": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    },
                    {
                      "type": "array"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "min": {
                          "type": "number"
                        },
                        "max": {
                          "type": "number"
                        },
                        "alternative": {
                          "description": "display alternative recommndation",
                          "type": "string"
                        }
                      }
                    }
                  ]
                },
              "inclusion": {
              "description": "include if true, exlcude if false",
              "type": "boolean"
              }
              },
              "required": [
                "name",
                "id",
                "strength",
                "inclusion"
              ],
              "additionalProperties": false
              }
            }
          },
        "required": [
          "population",
          "intervention"
          ],
        "additionalProperties": false
        }
      }
    },
    "required": [
    "recommendations",
    "recommendationId",
    "recommended"
    ],
    "additionalProperties": false,
    "definitions": {
      "terminologyIdentifier": {
          "description": "ID and terminology",
          "type": "object",
          "properties": {
              "id": {
                  "type": "string"
                  },
              "terminology": {
                  "type": "string"
                  }
              }
          }
      }
    }
}
